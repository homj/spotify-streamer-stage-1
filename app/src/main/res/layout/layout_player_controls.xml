<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_passed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="12sp"
        android:text="00:00"
        android:layout_margin="@dimen/track_time_text_spacing"/>

    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/secondary_text_default_material_dark"
        android:textSize="12sp"
        android:text="00:00"
        android:layout_margin="@dimen/track_time_text_spacing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/default_spacing"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_skip_previous"
            android:layout_width="@dimen/player_control_button_size"
            android:layout_height="@dimen/player_control_button_size"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="@dimen/player_control_button_size"
            android:layout_height="@dimen/player_control_button_size"
            android:layout_weight="1"
            android:src="@drawable/ic_play"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

        <ImageView
            android:id="@+id/iv_skip_next"
            android:layout_width="@dimen/player_control_button_size"
            android:layout_height="@dimen/player_control_button_size"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    </LinearLayout>
</FrameLayout>